<h2 class="mt-5 text-center">Forgot your password?</h2>
<hr>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: {turbo: false} }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email, class: "fw-bold mt-4 mb-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"my-2 btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
